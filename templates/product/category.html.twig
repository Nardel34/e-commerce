{% extends "base.html.twig" %} {% block title %} Catégorie : {{category.name}} {% endblock title %} {% block body %}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{path('homePage')}}">Accueil</a></li>
    <li class="breadcrumb-item active">{{category.name}}</li>
</ol>
<h2> Catégorie : {{category.name}}</h2>
<div class="row"> {% for i in category.products %}

    <div class="col-3">
        <div class="card">
            <img src="{{i.mainPicture}}" alt="img" class="img-fluid">
            <div class="card-body">
                <h4 class="card-title">{{i.name}} ({{i.price / 100}}€)</h4>
                <span class="badge rounded-pill bg-success">{{i.category.name}}</span>
                <p class="card-text">{{i.shortDescription}}</p>
                <a href="{{path('product_show', {'category_slug': i.category.slug, 'slug': i.slug})}}" class="btn btn-primary btn btn-sm ">Détails</a>
                <a href="# " class="btn btn-success btn-sm ">Ajouter</a>
            </div>
        </div>
    </div>

    {% endfor %}
</div>

{% endblock body %}